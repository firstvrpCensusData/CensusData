<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.MY" parent="Theme.Sherlock.Light.Definition">
        <item name="actionBarStyle">@style/Widget.My.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.My.ActionBar</item>
    </style>

    <!-- 标题栏的样式 -->
    <style name="Widget.My.ActionBar" parent="Widget.Sherlock.ActionBar.Solid">
        <item name="titleTextStyle">@style/Widget.My.ActionBar.Title</item>
        <item name="android:background">#71d6ae</item>
        <item name="android:backgroundStacked">#71d6ae</item>
        <item name="android:backgroundSplit">#71d6ae</item>
        <item name="android:titleTextStyle">@style/Widget.My.ActionBar.Title</item>
    </style>

    <!-- 标题栏的标题样式 -->
    <style name="Widget.My.ActionBar.Title" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">100dp</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
