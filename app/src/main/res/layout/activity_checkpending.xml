<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        
        android:id="@+id/checkpending_top"
        layout="@layout/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <include
        android:id="@+id/checkpending_select"
        layout="@layout/activity_leader_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkpending_top"
        />

    <include
        android:id="@+id/checkpending_bottom"
        layout="@layout/custom_leader_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ListView
        android:id="@+id/checkpending_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkpending_bottom"
        android:layout_below="@id/checkpending_select"
        android:divider="@null"
        android:dividerHeight="5dp"></ListView>
</RelativeLayout>
